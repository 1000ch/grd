{
  "name": "grd",
  "version": "1.4.0",
  "description": "A CSS grid framework using Flexbox.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:1000ch/grd.git"
  },
  "author": {
    "name": "Shogo Sensui",
    "email": "shogosensui@gmail.com",
    "url": "https://github.com/1000ch"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "postcss --output grd.css src/grd.css"
  },
  "postcss": {
    "map": false,
    "plugins": {
      "autoprefixer": true,
      "cssnano": true
    }
  },
  "browserslist": [
    "ie 11"
  ],
  "main": "grd.css",
  "style": "grd.css",
  "files": [
    "grd.css",
    "license",
    "src"
  ],
  "keywords": [
    "css",
    "grid",
    "flexbox"
  ],
  "devDependencies": {
    "autoprefixer": "^10.3.4",
    "cssnano": "^4.1.0",
    "postcss-cli": "^7.1.0"
  }
}
